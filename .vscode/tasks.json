{
  "version": "2.0.0",
  "options": {
    "cwd": "${workspaceFolder}/BlocoNaRua.Restful",
    "env": {
      "ASPNETCORE_ENVIRONMENT": "Development"
    }
  },
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": ["clean"],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false,
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "watch",
      "dependsOn": "clean",
      "dependsOrder": "sequence",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "-v:m",
        "--property",
        "WarningLevel=0",
        "--no-hot-reload"
      ],
      "problemMatcher": {
        "owner": "csharp",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(?!.*Exited with error code -1).\\s*(.*)\\((\\d+),(\\d+)\\):\\s*(error|warning)\\s*(\\w+):\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Executing task:.*watch",
          "endsPattern": "^.*Now listening on:.*$"
        },
        "applyTo": "allDocuments"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true,
        "revealProblems": "onProblem"
      }
    }
  ]
}
